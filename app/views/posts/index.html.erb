<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<% @posts.each do |post| %>
    <h2><%= post.title %></h2>

    <%= post.content %>
    <br/>
    <% if user_signed_in? %>
      <div id="post-actions">
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete %>
      </div><!-- #name -->
    <% end %>
<% end %>

<br />

